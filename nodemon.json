{
  "watch": ["src"],
  "ext": "ts",
  "ignore": [
    "src/**/*.spec.ts",
    "dist/**/*",
    "node_modules/**/*",
    "*.log",
    "*.md",
    "test-*.js",
    "debug-*.js",
    "fix-*.js",
    "populate-*.js",
    "check-*.js",
    "validate-*.js"
  ],
  "exec": "ts-node",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": "2500"
}