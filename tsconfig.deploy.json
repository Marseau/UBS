{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "allowJs": true,
    "emitDeclarationOnly": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js"
  ],
  "exclude": [
    "src/frontend/js/**/*",
    "src/services/subscription-monitor-enhanced.service.ts",
    "scripts/**/*",
    "node_modules",
    "dist",
    "tests",
    "tools"
  ]
}