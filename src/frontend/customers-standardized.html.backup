    <!-- Modal de Edição/Novo Cliente -->
    <div class="modal fade" id="editCustomerModal" tabindex="-1" aria-labelledby="editCustomerModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editCustomerModalLabel">
                        <i class="fas fa-edit me-2"></i>Editar Cliente
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="editCustomerForm">
                        <input type="hidden" id="editCustomerId" name="customerId">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="editCustomerName" class="form-label">Nome Completo</label>
                                <input type="text" class="form-control" id="editCustomerName" name="name" required>
                            </div>
                            <div class="col-md-6">
                                <label for="editCustomerPhone" class="form-label">Telefone</label>
                                <input type="tel" class="form-control" id="editCustomerPhone" name="phone" required>
                            </div>
                            <div class="col-md-6">
                                <label for="editCustomerEmail" class="form-label">Email</label>
                                <input type="email" class="form-control" id="editCustomerEmail" name="email" required>
                            </div>
                            <div class="col-md-6">
                                <label for="editCustomerStatus" class="form-label">Status</label>
                                <select class="form-select" id="editCustomerStatus" name="status" required>
                                    <option value="">Selecione o status</option>
                                    <option value="active">Ativo</option>
                                    <option value="inactive">Inativo</option>
                                    <option value="blocked">Bloqueado</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label for="editCustomerBirthDate" class="form-label">Data de Nascimento</label>
                                <input type="date" class="form-control" id="editCustomerBirthDate" name="birthDate">
                            </div>
                            <div class="col-md-6">
                                <label for="editCustomerGender" class="form-label">Gênero</label>
                                <select class="form-select" id="editCustomerGender" name="gender">
                                    <option value="">Selecione o gênero</option>
                                    <option value="M">Masculino</option>
                                    <option value="F">Feminino</option>
                                    <option value="O">Outro</option>
                                    <option value="N">Prefere não informar</option>
                                </select>
                            </div>
                            <div class="col-12">
                                <label for="editCustomerAddress" class="form-label">Endereço</label>
                                <textarea class="form-control" id="editCustomerAddress" name="address" rows="2" placeholder="Endereço completo..."></textarea>
                            </div>
                            <div class="col-12">
                                <label for="editCustomerNotes" class="form-label">Observações</label>
                                <textarea class="form-control" id="editCustomerNotes" name="notes" rows="3" placeholder="Observações sobre o cliente, preferências, alergias, etc..."></textarea>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancelar
                    </button>
                    <button type="button" class="btn btn-primary" onclick="saveCustomer()">
                        <i class="fas fa-save me-2"></i>Salvar Alterações
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="js/utils/secure-auth.js"></script>
    <script src="js/utils/context-manager.js"></script>
    <script>
        // Variáveis globais para armazenar dados do cliente
        let currentCustomerData = {};
        
        // Função para visualizar cliente
        function viewCustomer(id, name, phone, email, lastAppointment, totalSpent, status) {
            currentCustomerData = { id, name, phone, email, lastAppointment, totalSpent, status };
            
            // Preenche o modal de visualização
            document.getElementById('viewCustomerName').textContent = name;
            document.getElementById('viewCustomerPhone').textContent = phone;
            document.getElementById('viewCustomerEmail').textContent = email;
            document.getElementById('viewCustomerStatus').innerHTML = getStatusBadge(status);
            document.getElementById('viewCustomerLastAppointment').textContent = lastAppointment;
            document.getElementById('viewCustomerTotalSpent').textContent = totalSpent;
            document.getElementById('viewCustomerId').textContent = id;
            
            // Abre o modal
            const modal = new bootstrap.Modal(document.getElementById('viewCustomerModal'));
            modal.show();
            
            console.log('Visualizando cliente:', id);
        }
        
        // Função para editar cliente
        function editCustomer(id, name, phone, email, lastAppointment, totalSpent, status) {
            currentCustomerData = { id, name, phone, email, lastAppointment, totalSpent, status };
            
            // Preenche o modal de edição
            document.getElementById('editCustomerId').value = id;
            document.getElementById('editCustomerName').value = name;
            document.getElementById('editCustomerPhone').value = phone;
            document.getElementById('editCustomerEmail').value = email;
            
            // Status
            const statusValue = getStatusValue(status);
            document.getElementById('editCustomerStatus').value = statusValue;
            
            // Abre o modal
            const modal = new bootstrap.Modal(document.getElementById('editCustomerModal'));
            modal.show();
            
            console.log('Editando cliente:', id);
        }
        
        // Função para editar a partir do modal de visualização
        function editCustomerFromView() {
            // Fecha modal de visualização
            const viewModal = bootstrap.Modal.getInstance(document.getElementById('viewCustomerModal'));
            viewModal.hide();
            
            // Abre modal de edição com os dados atuais
            setTimeout(() => {
                const { id, name, phone, email, lastAppointment, totalSpent, status } = currentCustomerData;
                editCustomer(id, name, phone, email, lastAppointment, totalSpent, status);
            }, 300);
        }
        
        // Função para novo cliente
        function addCustomer() {
            // Limpa o formulário
            document.getElementById('editCustomerForm').reset();
            document.getElementById('editCustomerId').value = 'new';
            
            // Muda o título do modal
            document.getElementById('editCustomerModalLabel').innerHTML = 
                '<i class="fas fa-plus me-2"></i>Novo Cliente';
            
            // Abre o modal
            const modal = new bootstrap.Modal(document.getElementById('editCustomerModal'));
            modal.show();
        }
        
        // Função para salvar alterações
        async function saveCustomer() {
            const form = document.getElementById('editCustomerForm');
            const formData = new FormData(form);
            
            const customerData = {
                id: formData.get('customerId'),
                name: formData.get('name'),
                phone: formData.get('phone'),
                email: formData.get('email'),
                status: formData.get('status'),
                birthDate: formData.get('birthDate'),
                gender: formData.get('gender'),
                address: formData.get('address'),
                notes: formData.get('notes')
            };
            
            try {
                // Determine se é criação ou edição
                const isNew = customerData.id === 'new';
                const url = isNew ? '/api/admin/customers' : `/api/admin/customers/${customerData.id}`;
                const method = isNew ? 'POST' : 'PUT';
                
                console.log('Salvando cliente:', customerData);
                
                // Chamada para a API
                const response = await fetch(url, {
                    method: method,
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': getAuthToken()
                    },
                    body: JSON.stringify(customerData)
                });
                
                if (response.ok) {
                    // Sucesso
                    const modal = bootstrap.Modal.getInstance(document.getElementById('editCustomerModal'));
                    modal.hide();
                    
                    // Feedback de sucesso
                    const action = isNew ? 'criado' : 'atualizado';
                    showSuccessMessage(`Cliente ${action} com sucesso!`);
                    
                    // Atualizar a tabela
                    setTimeout(() => {
                        location.reload();
                    }, 1000);
                } else {
                    throw new Error('Erro ao salvar cliente');
                }
                
            } catch (error) {
                console.error('Erro ao salvar:', error);
                showErrorMessage('Erro ao salvar cliente. Tente novamente.');
            }
        }
        
        // Funções auxiliares
        function getStatusBadge(status) {
            const badges = {
                'Ativo': '<span class="badge bg-success">Ativo</span>',
                'Inativo': '<span class="badge bg-warning">Inativo</span>',
                'Bloqueado': '<span class="badge bg-danger">Bloqueado</span>'
            };
            return badges[status] || status;
        }
        
        function getStatusValue(statusText) {
            const statusMap = {
                'Ativo': 'active',
                'Inativo': 'inactive',
                'Bloqueado': 'blocked'
            };
            return statusMap[statusText] || 'active';
        }
        
        function getAuthToken() {
            if (window.secureAuth) {
                return window.secureAuth.getAuthHeader();
            }
            return 'Bearer ' + (localStorage.getItem('ubs_token') || localStorage.getItem('adminToken'));
        }
        
        function showSuccessMessage(message) {
            const alert = document.createElement('div');
            alert.className = 'alert alert-success alert-dismissible fade show position-fixed';
            alert.style.top = '20px';
            alert.style.right = '20px';
            alert.style.zIndex = '9999';
            alert.innerHTML = `
                <i class="fas fa-check-circle me-2"></i>${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            document.body.appendChild(alert);
            
            setTimeout(() => {
                alert.remove();
            }, 3000);
        }
        
        function showErrorMessage(message) {
            const alert = document.createElement('div');
            alert.className = 'alert alert-danger alert-dismissible fade show position-fixed';
            alert.style.top = '20px';
            alert.style.right = '20px';
            alert.style.zIndex = '9999';
            alert.innerHTML = `
                <i class="fas fa-exclamation-circle me-2"></i>${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            document.body.appendChild(alert);
            
            setTimeout(() => {
                alert.remove();
            }, 5000);
        }
        
        // Funções originais
        function refreshCustomers() {
            showSuccessMessage('Atualizando lista de clientes...');
            setTimeout(() => {
                location.reload();
            }, 1000);
        }
        
        function exportCustomers() {
            showSuccessMessage('Iniciando exportação...');
            window.open('/api/admin/export/customers', '_blank');
        }
        
        // Funções do menu de usuário
        function exportData() {
            exportCustomers();
        }
        
        function refreshData() {
            refreshCustomers();
        }
        
        function logout() {
            if (confirm('Tem certeza que deseja sair?')) {
                if (window.secureAuth) {
                    window.secureAuth.logout();
                } else {
                    localStorage.removeItem('ubs_token');
                    localStorage.removeItem('adminToken');
                }
                window.location.href = 'login.html';
            }
        }

        // Inicializa contexto na página
        document.addEventListener('DOMContentLoaded', function() {
            if (window.contextManager) {
                window.contextManager.refreshContext();
            }
        });
    </script>
