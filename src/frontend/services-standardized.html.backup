    <!-- Modal de Visualização -->
    <div class="modal fade" id="viewServiceModal" tabindex="-1" aria-labelledby="viewServiceModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="viewServiceModalLabel">
                        <i class="fas fa-concierge-bell me-2"></i>Detalhes do Serviço
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label"><strong>Nome do Serviço:</strong></label>
                            <p id="viewServiceName" class="form-control-plaintext">-</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label"><strong>Preço:</strong></label>
                            <p id="viewServicePrice" class="form-control-plaintext">-</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label"><strong>Duração:</strong></label>
                            <p id="viewServiceDuration" class="form-control-plaintext">-</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label"><strong>Status:</strong></label>
                            <p id="viewServiceStatus" class="form-control-plaintext">-</p>
                        </div>
                        <div class="col-12">
                            <label class="form-label"><strong>Descrição:</strong></label>
                            <p id="viewServiceDescription" class="form-control-plaintext">-</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label"><strong>ID do Serviço:</strong></label>
                            <p id="viewServiceId" class="form-control-plaintext">-</p>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Fechar
                    </button>
                    <button type="button" class="btn btn-primary" onclick="editServiceFromView()">
                        <i class="fas fa-edit me-2"></i>Editar
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de Edição/Novo Serviço -->
    <div class="modal fade" id="editServiceModal" tabindex="-1" aria-labelledby="editServiceModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editServiceModalLabel">
                        <i class="fas fa-edit me-2"></i>Editar Serviço
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="editServiceForm">
                        <input type="hidden" id="editServiceId" name="serviceId">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="editServiceName" class="form-label">Nome do Serviço</label>
                                <input type="text" class="form-control" id="editServiceName" name="name" required>
                            </div>
                            <div class="col-md-6">
                                <label for="editServicePrice" class="form-label">Preço (R$)</label>
                                <input type="number" class="form-control" id="editServicePrice" name="price" step="0.01" min="0" required>
                            </div>
                            <div class="col-md-6">
                                <label for="editServiceDuration" class="form-label">Duração (minutos)</label>
                                <input type="number" class="form-control" id="editServiceDuration" name="duration" min="1" required>
                            </div>
                            <div class="col-md-6">
                                <label for="editServiceStatus" class="form-label">Status</label>
                                <select class="form-select" id="editServiceStatus" name="status" required>
                                    <option value="">Selecione o status</option>
                                    <option value="active">Ativo</option>
                                    <option value="inactive">Inativo</option>
                                    <option value="discontinued">Descontinuado</option>
                                </select>
                            </div>
                            <div class="col-12">
                                <label for="editServiceDescription" class="form-label">Descrição</label>
                                <textarea class="form-control" id="editServiceDescription" name="description" rows="3" placeholder="Descrição detalhada do serviço..."></textarea>
                            </div>
                            <div class="col-12">
                                <label for="editServiceNotes" class="form-label">Observações</label>
                                <textarea class="form-control" id="editServiceNotes" name="notes" rows="2" placeholder="Observações internas, equipamentos necessários, etc..."></textarea>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancelar
                    </button>
                    <button type="button" class="btn btn-primary" onclick="saveService()">
                        <i class="fas fa-save me-2"></i>Salvar Alterações
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="js/utils/secure-auth.js"></script>
    <script src="js/utils/context-manager.js"></script>
    <script>
        // Variáveis globais para armazenar dados do serviço
        let currentServiceData = {};
        
        // Função para visualizar serviço
        function viewService(id, name, price, duration, status, description) {
            currentServiceData = { id, name, price, duration, status, description };
            
            // Preenche o modal de visualização
            document.getElementById('viewServiceName').textContent = name;
            document.getElementById('viewServicePrice').textContent = `R$ ${parseFloat(price).toFixed(2)}`;
            document.getElementById('viewServiceDuration').textContent = `${duration} minutos`;
            document.getElementById('viewServiceStatus').innerHTML = getStatusBadge(status);
            document.getElementById('viewServiceDescription').textContent = description;
            document.getElementById('viewServiceId').textContent = id;
            
            // Abre o modal
            const modal = new bootstrap.Modal(document.getElementById('viewServiceModal'));
            modal.show();
            
            console.log('Visualizando serviço:', id);
        }
        
        // Função para editar serviço
        function editService(id, name, price, duration, status, description) {
            currentServiceData = { id, name, price, duration, status, description };
            
            // Preenche o modal de edição
            document.getElementById('editServiceId').value = id;
            document.getElementById('editServiceName').value = name;
            document.getElementById('editServicePrice').value = parseFloat(price).toFixed(2);
            document.getElementById('editServiceDuration').value = duration;
            document.getElementById('editServiceDescription').value = description;
            
            // Status
            const statusValue = getStatusValue(status);
            document.getElementById('editServiceStatus').value = statusValue;
            
            // Restaura título de edição
            document.getElementById('editServiceModalLabel').innerHTML = 
                '<i class="fas fa-edit me-2"></i>Editar Serviço';
            
            // Abre o modal
            const modal = new bootstrap.Modal(document.getElementById('editServiceModal'));
            modal.show();
            
            console.log('Editando serviço:', id);
        }
        
        // Função para editar a partir do modal de visualização
        function editServiceFromView() {
            // Fecha modal de visualização
            const viewModal = bootstrap.Modal.getInstance(document.getElementById('viewServiceModal'));
            viewModal.hide();
            
            // Abre modal de edição com os dados atuais
            setTimeout(() => {
                const { id, name, price, duration, status, description } = currentServiceData;
                editService(id, name, price, duration, status, description);
            }, 300);
        }
        
        // Função para novo serviço
        function addService() {
            // Limpa o formulário
            document.getElementById('editServiceForm').reset();
            document.getElementById('editServiceId').value = 'new';
            
            // Muda o título do modal
            document.getElementById('editServiceModalLabel').innerHTML = 
                '<i class="fas fa-plus me-2"></i>Novo Serviço';
            
            // Abre o modal
            const modal = new bootstrap.Modal(document.getElementById('editServiceModal'));
            modal.show();
        }
        
        // Função para salvar alterações
        async function saveService() {
            const form = document.getElementById('editServiceForm');
            const formData = new FormData(form);
            
            const serviceData = {
                id: formData.get('serviceId'),
                name: formData.get('name'),
                price: parseFloat(formData.get('price')),
                duration: parseInt(formData.get('duration')),
                status: formData.get('status'),
                description: formData.get('description'),
                notes: formData.get('notes')
            };
            
            try {
                // Determine se é criação ou edição
                const isNew = serviceData.id === 'new';
                const url = isNew ? '/api/admin/services' : `/api/admin/services/${serviceData.id}`;
                const method = isNew ? 'POST' : 'PUT';
                
                console.log('Salvando serviço:', serviceData);
                
                // Chamada para a API
                const response = await fetch(url, {
                    method: method,
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': getAuthToken()
                    },
                    body: JSON.stringify(serviceData)
                });
                
                if (response.ok) {
                    // Sucesso
                    const modal = bootstrap.Modal.getInstance(document.getElementById('editServiceModal'));
                    modal.hide();
                    
                    // Feedback de sucesso
                    const action = isNew ? 'criado' : 'atualizado';
                    showSuccessMessage(`Serviço ${action} com sucesso!`);
                    
                    // Atualizar a tabela
                    setTimeout(() => {
                        location.reload();
                    }, 1000);
                } else {
                    const errorData = await response.json();
                    throw new Error(errorData.error || 'Erro ao salvar serviço');
                }
                
            } catch (error) {
                console.error('Erro ao salvar:', error);
                showErrorMessage(`Erro ao salvar serviço: ${error.message}`);
            }
        }
        
        // Funções auxiliares
        
        function getStatusBadge(status) {
            const badges = {
                'Ativo': '<span class="badge bg-success">Ativo</span>',
                'Inativo': '<span class="badge bg-warning">Inativo</span>',
                'Descontinuado': '<span class="badge bg-danger">Descontinuado</span>'
            };
            return badges[status] || status;
        }
        
        function getStatusValue(statusText) {
            const statusMap = {
                'Ativo': 'active',
                'Inativo': 'inactive',
                'Descontinuado': 'discontinued'
            };
            return statusMap[statusText] || 'active';
        }
        
        function getAuthToken() {
            if (window.secureAuth) {
                return window.secureAuth.getAuthHeader();
            }
            return 'Bearer ' + (localStorage.getItem('ubs_token') || localStorage.getItem('adminToken'));
        }
        
        function showSuccessMessage(message) {
            const alert = document.createElement('div');
            alert.className = 'alert alert-success alert-dismissible fade show position-fixed';
            alert.style.top = '20px';
            alert.style.right = '20px';
            alert.style.zIndex = '9999';
            alert.innerHTML = `
                <i class="fas fa-check-circle me-2"></i>${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            document.body.appendChild(alert);
            
            setTimeout(() => {
                alert.remove();
            }, 3000);
        }
        
        function showErrorMessage(message) {
            const alert = document.createElement('div');
            alert.className = 'alert alert-danger alert-dismissible fade show position-fixed';
            alert.style.top = '20px';
            alert.style.right = '20px';
            alert.style.zIndex = '9999';
            alert.innerHTML = `
                <i class="fas fa-exclamation-circle me-2"></i>${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            document.body.appendChild(alert);
            
            setTimeout(() => {
                alert.remove();
            }, 5000);
        }
        
        // Funções originais
        function refreshServices() {
            showSuccessMessage('Atualizando lista de serviços...');
            setTimeout(() => {
                location.reload();
            }, 1000);
        }
        
        function exportServices() {
            showSuccessMessage('Iniciando exportação...');
            window.open('/api/admin/export/services', '_blank');
        }
        
        // Funções do menu de usuário
        function exportData() {
            exportServices();
        }
        
        function refreshData() {
            refreshServices();
        }
        
        function logout() {
            if (confirm('Tem certeza que deseja sair?')) {
                if (window.secureAuth) {
                    window.secureAuth.logout();
                } else {
                    localStorage.removeItem('ubs_token');
                    localStorage.removeItem('adminToken');
                }
                window.location.href = 'login.html';
            }
        }

        // Inicializa contexto na página
        document.addEventListener('DOMContentLoaded', function() {
            if (window.contextManager) {
                window.contextManager.refreshContext();
            }
        });
    </script>
</body>
</html>